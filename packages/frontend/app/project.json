{
  "name": "frontend-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/frontend/app/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/frontend/app"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "frontend-app:build",
        "proxyConfig": "packages/frontend/app/proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "frontend-app:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "frontend-app:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nrwl/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "frontend-app:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "frontend-app:build:development"
        },
        "production": {
          "buildTarget": "frontend-app:build:production"
        }
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/frontend/app"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/packages/frontend/app"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/frontend/app/**/*.{ts,tsx,js,jsx}"]
      }
    },

    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f packages/frontend/app/Dockerfile . -t app"
    }
  },
  "tags": []
}
