{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/hardhat",
        "command": "hardhat compile"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/hardhat",
        "command": "hardhat test"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/hardhat",
        "command": "hardhat clean"
      }
    },
    "node": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/hardhat",
        "command": "hardhat node"
      }
    },
    "script": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/hardhat",
        "command": "hardhat run"
      }
    }
  }
}
